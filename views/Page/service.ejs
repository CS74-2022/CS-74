<%- include('../include/header.ejs') %> 

<div class="flex justify-center">
    <div class="w-4/12 m-10 bg-white p-6 rounded-lg ">
        <div class="text-red-500 m-2 text-sm">
            <%- include('../err/messages.ejs') %> 
        </div>
        <form id="form" method="post" action="/service" enctype="multipart/form-data">
            <input type="text" hidden name="userId" id="UserIdGoogleAccount" value="<%= user.userId %>">
            <div class="mb-4">
                <label for="nameCenter" class="sr-only">Center Name</label>
                <input type="text" name="nameCenter" id="nameCenter" placeholder="Center Name"
                        class="bg-gray-100 border-2 w-full p-4 rounded-lg" value="<%= typeof nameCenter != 'undefined' ? nameCenter : '' %>">
            </div>

            <div class="mb-4">
                <label for="serviceType" class="sr-only">Username</label>
                <select id="serviceType" name="serviceType">
                    <option value="Hall">Hall</option>
                    <option value="Cars">Cars</option>
                </select>
            </div>
            <div class="mb-4">
                <label for="Address" class="sr-only">Address</label>
                <input type="text" name="address" id="address" placeholder="Address"
                        class="bg-gray-100 border-2 w-full p-4 rounded-lg" value="<%= typeof address != 'undefined' ? address : '' %>">
            </div>
            <div class="mb-4">
                <label for="phoneNumber" class="sr-only">Phone Number</label>
                <input type="text" name="phoneNumber" id="phoneNumber" placeholder="phoneNumber"
                        class="bg-gray-100 border-2 w-full p-4 rounded-lg" value="<%= typeof phoneNumber != 'undefined' ? phoneNumber : '' %>">
            </div>
            <div class="mb-4">
                <label for="Facebook" class="sr-only">Facebook Link</label>
                <input type="text" name="Facebook" id="Facebook" placeholder="Facebook Link"
                        class="bg-gray-100 border-2 w-full p-4 rounded-lg" value="<%= typeof Facebook != 'undefined' ? Facebook : '' %>">
            </div>
            <div class="mb-4">
                <label for="img" class="sr-only">Main Image</label>
                <input type="file" name="img" id="img" placeholder="Main Image"
                        class="bg-gray-100 border-2 w-full p-4 rounded-lg">
            </div>
            <div>
                <button type="submit" class=" bg-blue-500 text-white px-4 py-3 rounded font-medium w-full">Send</button>
            </div>
        </form>
    </div>
</div>

<%- include('../include/footer.ejs') %> 