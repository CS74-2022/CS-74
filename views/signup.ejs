<%- include('./include/header.ejs') %> 

<div class="flex justify-center">
    <div class="w-4/12 m-10 bg-white p-6 rounded-lg ">
        <div class=" justify-center ">
            <button id="signInWithGoogle" class="bg-gray-200 rounded-3xl mb-3 text-center px-4 py-3 font-medium w-full">
                <i class="fa-brands fa-google m-3"></i><span class="m-3">Login with your Google</span> 
            </button>
        </div>
            <%- include('./err/messages.ejs') %> 
        <form action="/register" method="post">
            <div class="mb-4">
                <label for="username" class="sr-only">Username</label>
                <input type="text" name="username" id="username" placeholder="Username..."
                        class="bg-gray-100 border-2 w-full p-4 rounded-lg" value="<%= typeof username != 'undefined' ? username : '' %>">
            </div>

            <div class="mb-4">
                <label for="email" class="sr-only">Email</label>
                <input type="email" name="email" id="email" placeholder="Your email..."
                        class="bg-gray-100 border-2 w-full p-4 rounded-lg" value="<%= typeof email != 'undefined' ? email : '' %>">
            </div>

            <div class="mb-4">
                <label for="password" class="sr-only">Password</label>
                <input type="password" name="password" id="password" placeholder="Your password..."
                        class="bg-gray-100 border-2 w-full p-4 rounded-lg " value="<%= typeof password != 'undefined' ? password : '' %>" >
            </div>
            
            <div class="mb-4">
                <label for="password2" class="sr-only">Confirm Password</label>
                <input type="password" name="password2" id="password2" placeholder="Confirm Password..."
                        class="bg-gray-100 border-2 w-full p-4 rounded-lg " value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
            </div>
            <div class="mb-4">
                <label for="nameCenter" class="sr-only">Center Name</label>
                <input type="text" name="nameCenter" id="nameCenter" placeholder="Center Name"
                        class="bg-gray-100 border-2 w-full p-4 rounded-lg" value="<%= typeof nameCenter != 'undefined' ? nameCenter : '' %>">
            </div>
            <div class="mb-4">
                <label for="serviceType" class="sr-only">Username</label>
                <select id="serviceType" name="serviceType">
                    <option value="Hall">Hall</option>
                    <option value="Cars">Cars</option>
                </select>
            </div>
            <div class="mb-4">
                <label for="Address" class="sr-only">Address</label>
                <input type="text" name="address" id="address" placeholder="Address"
                        class="bg-gray-100 border-2 w-full p-4 rounded-lg" value="<%= typeof address != 'undefined' ? address : '' %>">
            </div>
            <div class="mb-4">
                <label for="phoneNumber" class="sr-only">Phone Number</label>
                <input type="text" name="phoneNumber" id="phoneNumber" placeholder="phoneNumber"
                        class="bg-gray-100 border-2 w-full p-4 rounded-lg" value="<%= typeof phoneNumber != 'undefined' ? phoneNumber : '' %>">
            </div>

            <a href="/sigIn" class="text-blue-500">Have Account</a>

            <div>
                <button type="submit" class=" bg-blue-500 text-white px-4 py-3 rounded font-medium w-full">Register</button>
            </div>
        </form>
    </div>
</div>

<%- include('./include/footer.ejs') %> 